<Window x:Class="Converter2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Converter2"
        mc:Ignorable="d"
        Title="Конвертер файлов" Height="350" Width="500">
    <StackPanel Margin="20" VerticalAlignment="Top">
        <TextBlock Text="Выберите входной файл:"/>
        <Button Content="Выбрать файл..." Click="SelectInputFileButton_Click"/>
        <TextBlock x:Name="InputFilePathTextBlock" Text="..." Margin="0,5,0,10"/>

        <TextBlock Text="Доступные форматы для конвертации:"/>
        <ComboBox x:Name="FormatComboBox" Margin="0,0,0,10"/>

        <Button x:Name="ConvertButton" Content="Конвертировать" Click="ConvertButton_Click"/>
    </StackPanel>
</Window>
